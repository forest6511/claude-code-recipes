{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/detect-secrets.sh"
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/protect-files.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/detect-secrets.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "deny": [
      "Read(.env*)",
      "Read(**/credentials*)",
      "Read(**/*secret*)",
      "Read(**/*id_rsa*)"
    ]
  }
}