{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "language": "japanese",
  "showTurnDuration": true,
  "alwaysThinkingEnabled": true,
  "permissions": {
    "allow": [
      "Read",
      "Bash(git *)",
      "Bash(npm test *)",
      "Bash(npm run lint *)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Bash(rm -rf *)",
      "Bash(sudo *)"
    ]
  }
}
